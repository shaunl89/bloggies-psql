<% provide(:title, "Edit Post: #{@current_post.id}") %>

<%= form_for @current_post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>

  <%= f.hidden_field :user_id %>

  <%= f.submit %>
<% end %> %>

<%= @current_post.inspect %>
